	</device> -->
	<device device_type="sensor" name="bb-button:1">
		<function name="getValue" alias="boton" params="0" ret="1" />
	</device>
	<device device_type="actuator" name="bb-motors">
		<function name="setvel2mtr" alias="mover adelante" params="4" ret="0" values="0,Yatay.vel*10.23,0,Yatay.vel*10.23" />
		<function name="setvel2mtr" alias="mover" params="2" ret="0"/>
		<function name="setvel2mtr" alias="mover atras" params="4" ret="0" values="1,Yatay.vel*10.23,1,Yatay.vel*10.23" />
